generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model peep {
  id         String   @id @default(uuid())
  content    String
  user    user   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id String
  created_at DateTime @default(now())
}

model user {
  id         String   @id @default(uuid())
  name       String
  email      String
  username   String
  peeps      peep[]
  created_at DateTime @default(now())
}

model follows {
  follower_id String
  followee_id String

  @@id(fields: [follower_id, followee_id])
}
